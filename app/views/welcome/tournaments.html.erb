<% provide(:title, 'Tournaments') %>
<div class="row">
  <div class="card-panel">
<table class="bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
  </tr>
  </thead>

  <% @tournaments.each do |tournament| %>
      <tr>
        <td><%=  tournament.name %></td>
        <td><%= tournament.description %> </td>
       </tr>
  <% end %>
</table>
<br />
  </div>
</div>

