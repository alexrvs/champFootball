<h1>Listing Teams</h1>

<table class="bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Player1</th>
    <th>Player2</th>
    <th colspan="2" aria-valuetext="center">Action</th>
  </tr>
  </thead>

  <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team.name, :action => 'show', :id => team.id %></td>
        <td width="40%"><%= team.description %> </td>
        <td><%= full_name_player team.first_player %></td>
        <td><%= full_name_player team.second_player %></td>
        <td><%= link_to 'Edit', :action => 'edit', :id => team.id %></td>
        <td><%= link_to 'Destroy', {:action => 'destroy', :id => team.id}, :confirm => 'Are you sure?', :method => :post %></td>
      </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Team', {action: 'new'}, {class: "waves-effect waves-light btn"}  %>
<%= link_to 'Generate Teams', {action: 'generate'}, {class: "waves-effect waves-light btn"}  %>