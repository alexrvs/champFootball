<h1>Standings</h1>

<table class="bordered">
  <thead>
  <tr>
    <th>Position</th>
    <th>Name team</th>
    <th>Number of games played</th>
    <th>Number of wins</th>
    <th>Number of lesions</th>
    <th>Scoring - goals conceded</th>
    <th>Goal difference</th>
    <th>Points</th>
    <th colspan="2" aria-valuetext="center">Action</th>
  </tr>
  </thead>
  <% @teams.each do |team| %>
      <%   StandingsHelper.load team %>
      <tr>
        <td></td>
        <td><%= team.name %></td>
        <td><%= count_matches_all %></td>
        <td><%= count_wins %></td>
        <td><%= count_lose %></td>
        <td><%=  scored_goals.to_s + ' - ' +  missed_goals.to_s %></td>
        <td><%= scored_goals.to_i - missed_goals.to_i %></td>
        <td><%= all_team_score %></td>
        <td><%= link_to 'Edit', :action => 'edit', :id => team.id %></td>
        <td><%= link_to 'Destroy', {:action => 'destroy', :id => team.id}, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>
<br />

