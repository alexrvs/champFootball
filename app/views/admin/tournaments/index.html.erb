<h1>Listing Tournaments</h1>

<table class="bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Status</th>
    <th colspan="2" aria-valuetext="center">Action</th>
  </tr>
  </thead>

  <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= link_to tournament.name, :action => 'show', :id => tournament.id %></td>
        <td width="40%"><%= tournament.description %> </td>
        <% if tournament.tournament_type %>
            <td width="20%"><%=  tournament.tournament_type.name  %></td>
        <% else %>
            <td width="20%">Non set</td>
        <% end %>
        <td><%= link_to 'Edit', :action => 'edit', :id => tournament.id %></td>
        <td><%= link_to 'Destroy', {:action => 'destroy', :id => tournament.id}, :confirm => 'Are you sure?', :method => :post %></td>
      </tr>
  <% end %>
</table>
<br />
<%= link_to 'New Tournament', {action: 'new'}, {class: "waves-effect waves-light btn"}  %>